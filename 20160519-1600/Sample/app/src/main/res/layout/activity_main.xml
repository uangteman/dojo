<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/known_source_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Known Resource Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/known_source_ormlite_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORMLite" />

        <Button
            android:id="@+id/known_source_active_record_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Record" />

        <Button
            android:id="@+id/known_source_green_dao_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green Dao"/>

        <Button
            android:id="@+id/known_source_sql_lite_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lite"/>

    </LinearLayout>

    <TextView
        android:id="@+id/known_source_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
